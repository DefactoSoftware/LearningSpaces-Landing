<meta property="og:site_name" content="LearningSpaces">
    <meta property="og:title" content="<%= page_title %>">
    <meta property="og:url" content="<%= full_url(current_page.url) %>">
    <meta property="og:type" content="website">
    <%= tag(:meta, { property: "og:description", content: current_page.data.description }, true) if current_page.data.description -%>

    <meta property="og:image" content="<%= full_url(asset_url(current_page.data.image || "images/social/learningspaces-1200x630.png")) %>">
    <meta property="og:locale" content="<%= full_locale %>">
