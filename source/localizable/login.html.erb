---
title: Login
header_class: header-hero
---

<div class="panel-wrapper">
  <div class="panel">
    <h1><%= t("login.title") %></h1>

    <form id="login-form">
      <p><%= t("login.text") %></p>
      <div class="input-group">
        <input type="text" name="subdomain" id="subdomain" placeholder="<%= t("login.placeholder") %>" autocomplete="subdomain" autofocus>
        <span id="tld" class="input-addon">.learningspaces.io</span>
      </div>
      <div id="error"><%= t("login.error") %></div>
      <button type="submit" class="button button-green"><%= t("login.submit") %></button>
    </form>
  </div>

  <div class="panel-links">
    <a href="<%= t("login.signup_url") %>"><%= t("login.signup_link") %></a>
  </div>
</div>

<%= javascript_include_tag "login" %>
