      <input type="email" name="email" placeholder="<%= t("trial.signup.email") %>" required>
      <button type="submit" class="button-green"><%= t("trial.signup.submit") %></button>
    </form>
  </div>

  <div class="footer">
    <%= link_to t("trial.signup.footer"), "/" %>
  </div>
</div>
